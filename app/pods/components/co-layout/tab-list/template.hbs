<li class="caliopen-layout__tabs__item">
  {{#link-to currentApplication class="caliopen-layout__tabs__item__link caliopen-layout__tabs__item__link--first" activeClass="caliopen-layout__tabs__item__link--active"}}
    {{currentApplication}}
  {{/link-to}}
</li>
{{#each tabs as |tab|}}
<li class="caliopen-layout__tabs__item">
  {{#link-to tab.route tab.entity class="caliopen-layout__tabs__item__link" activeClass="caliopen-layout__tabs__item__link--active"}}
    {{tab.label}}
  {{/link-to}}
  <a href="" class="caliopen-layout__tabs__item__del-btn" {{ action "remove" tab}}><i class="fa fa-close"></i></a>
</li>
{{/each}}
