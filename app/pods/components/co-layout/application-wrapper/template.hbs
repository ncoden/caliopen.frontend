<div class="caliopen-layout__main-topbar row">
  <div class="caliopen-layout__main-topbar__block--action col-md-2">
    {{co-layout/main-action currentApplication=currentApplication }}
  </div>
  <div class="caliopen-layout__main-topbar__block--privacy col-md-10">
    {{co-layout/privacy-index-slider currentApplication=currentApplication refreshStores="refreshStores" }}
  </div>
</div>

<div class="row">
  <div class="caliopen-layout__block--importance col-md-1 hidden-sm hidden-xs">
    {{co-layout/importance-slider currentApplication=currentApplication refreshStores="refreshStores" }}
  </div>
  <div class="caliopen-layout__block--container col-md-11 col-sm-12 col-xs-12">
    {{co-layout/tab-list currentApplication=currentApplication remove="closeTab"}}
    <div class="caliopen-layout__main-content">
      {{yield}}
    </div>
  </div>
</div>
