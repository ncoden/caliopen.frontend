<li class="dropdown">
  <a  href="#" class="dropdown-toggle" data-toggle="dropdown"
      role="button" aria-expanded="false">
    {{fa-icon "user"}}
  </a>
  <ul class="dropdown-menu" role="menu">
    <li class="dropdown-header">{{ user.username }}</li>
    <li class="divider"></li>

    {{#co-widget/link-li}}
      {{#link-to "settings.account"}}
        {{format-message (intl-get 'header.menu.account')}}
      {{/link-to}}
    {{/co-widget/link-li}}

    {{#co-widget/link-li}}
      {{#link-to "settings.app"}}
        {{format-message (intl-get 'header.menu.settings')}}
      {{/link-to}}
    {{/co-widget/link-li}}

    <li class="divider"></li>
    <li>
      <a href="/signout" {{action 'logout'}}>
        {{format-message (intl-get 'header.menu.signout')}}
      </a>
    </li>
  </ul>
</li>
