<form action="/login" method="POST" accept-charset="utf-8"
      class="cor-login__form" {{action 'authenticate' on='submit' }}>

  <h3>{{format-message (intl-get 'login.form.title')}}</h3>

  <p class="cor-login__form-row">
    <label for="username" class="cor-login__label">
      {{format-message (intl-get 'login.form.username')}}
    </label>
    {{input type="text" name="username" class="cor-login__form-input" value=username }}
  </p>

  <p class="cor-login__form-row">
    <label for="password"  class="cor-login__label">
      {{format-message (intl-get 'login.form.password')}}
    </label>
    {{input type="password" name="password" class="cor-login__form-input" value=password }}
  </p>

  {{yield}}

  <p class="cor-login__form-row">
    <input  type="submit" class="cor-login__form-submit"
            value="{{format-message (intl-get 'login.form.submit')}}">
  </p>

</form>
